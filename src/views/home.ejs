<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <script>
        async function iflogged() {
            try {
                const response = await fetch('/sessionlogged');
                const data = await response.json();

                if (data.loggedIn) {
                    // Redirect to the desired page
                    window.location.href = '/profil';
                } else {
                    // Show a popup message
                    alert('You must be logged in to access this page!');
                }
            } catch (error) {
                console.error('Error checking login status:', error);
                alert('An error occurred. Please try again later.');
            }
        }
    </script>
       <title>Market</title>
    </head>
    <body>

<div class="menu-container">
    <p class="menu"><strong>Balance:</strong> $<%= balance %></p>
    <button class="menu" onclick="iflogged()">Mon compte</button>
    <button class="menu">
        <a href="/login">Connexion</a>
    </button>
</div>

<div class="wheel-container">
    <div class="pointer"></div>
     <div class="wheel" id="wheel">         </div>
</div>
<button class="spin-button" id="spinButton">Spin</button>
<div class="result" id="result">Spin the wheel to win!</div>
<div class="color-list">
    <div class="color-item" style="background-color: #61C0BF;">10% Discount</div>
    <div class="color-item" style="background-color: #937DC2;">Free Shipping</div>
    <div class="color-item" style="background-color: #FAE3D9;">5% Discount</div>
    <div class="color-item" style="background-color: #FFB6B9;">Try Again</div>
    <div class="color-item" style="background-color: #BBDED6;">Nothing</div>
    <div class="color-item" style="background-color: #FFABE1;">Bonus Points</div>
</div>
<script>
    const wheel = document.getElementById('wheel');
    const spinButton = document.getElementById('spinButton');
    const result = document.getElementById('result');

    // Possible outcomes with angles
    const outcomes = [
        { label: '10% Discount', color: '#61C0BF', startAngle: 0, endAngle: 60 },
        { label: 'Free Shipping', color: '#937DC2', startAngle: 60, endAngle: 120 },
        { label: '5% Discount', color: '#FAE3D9', startAngle: 120, endAngle: 180 },
        { label: 'Try Again', color: '#FFB6B9', startAngle: 180, endAngle: 240 },
        { label: 'Nothing', color: '#BBDED6', startAngle: 240, endAngle: 300 },
        { label: 'Bonus Points', color: '#FFABE1', startAngle: 300, endAngle: 360 }
    ];

    let spinning = false;

    spinButton.addEventListener('click', () => {
        if (spinning) return;

        spinning = true;
        spinButton.disabled = true;

        const currentTime = new Date();
        let random = currentTime.getMilliseconds() / 1000;

        // Randomize the spin
        const randomDegrees = Math.floor(random * 360) + 3000; // At least 10 full spins
        const finalDegrees = randomDegrees % 360; // The final position on the wheel (0–360)

        wheel.style.transform = `rotate(${randomDegrees}deg)`;

        // Determine the prize
        setTimeout(() => {
            // Pointer is at 0° (top of the wheel), adjust the angle accordingly
            const pointerAngle = (90 - finalDegrees + 10) % 360; // Offset pointer by 30° (center of first segment)

            // Find the corresponding outcome
            const prize = outcomes.find(outcome =>
                (pointerAngle >= outcome.startAngle) && (pointerAngle < outcome.endAngle)
            );

            result.textContent = `You won: ${prize.label}`;
            spinning = false;
            spinButton.disabled = false;
        }, 5000); // Match the transition duration
    });
</script>

<h1 class="main-title">Bienvenue</h1>
<table class="table table-striped table-bordered text-center">
    <thead class="table-dark">
    <tr>
        <th>Price</th>
        <th>Description</th>
        <th>Seller Email</th>
        <th>Stock</th>
        <th>Name</th>
        <th>Image</th>
    </tr>
    </thead>
    <tbody>
    <% if (Array.isArray(items) && items.length > 0) { %>
        <% items.forEach(item => { %>
            <% if (item.Stock >= 1) { %> <!-- Only show item if stock >= 1 -->
            <tr>
                <td><%= item.Price %>  € </td> <!-- Display Price -->
                <td><%= item.Description %></td> <!-- Display Description -->
                <td><%= item.SellerEmail %></td> <!-- Display Seller Email -->
                <td><%= item.Stock %></td> <!-- Display Stock -->
                <td><a href="/item/<%= item._id %>"><%= item.Name %></a></td> <!-- Display Item Name -->
                <td><img src="<%= item.Image %>" alt="Item Image" width="100"></td> <!-- Display Image -->
            </tr>
            <% } %>
        <% }) %>
    <% } else { %>
        <tr>
            <td colspan="6">No items available.</td> <!-- If no items are found -->
        </tr>
    <% } %>
    </tbody>
</table>

</body>
</html>
